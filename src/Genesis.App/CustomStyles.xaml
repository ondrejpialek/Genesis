<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls">	
	<Thickness x:Key="DefaultHorizontalMargin">6,0</Thickness>
	<Thickness x:Key="DefaultLabelMargin">6,6,6,3</Thickness>
	<Style x:Key="LabelStyle" TargetType="{x:Type TextBlock}">
		<Setter Property="Margin" Value="6,6,6,3"/>
	</Style>
	<Style x:Key="PaneHeading" TargetType="{x:Type TextBlock}">
		<Setter Property="FontSize" Value="18.667"/>
		<Setter Property="FontFamily" Value="Segoe UI Light"/>
		<Setter Property="Margin" Value="{DynamicResource DefaultMargin}"/>
	</Style>
</ResourceDictionary>